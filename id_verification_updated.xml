<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#062A32">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Back Arrow -->
        <ImageView
            android:id="@+id/backArrow"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="start"
            android:layout_marginBottom="20dp"
            android:contentDescription="Back"
            android:src="@drawable/backarrow" />


        <!-- White Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#FFFFFF"
            android:gravity="center">

            <TextView
                android:id="@+id/titleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Default Title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Main Content -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="16dp">

            <!-- Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ID VERIFICATION"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="24dp" />

            <!-- Upload Slot for Front ID -->
            <LinearLayout
                android:id="@+id/uploadFrontLayout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_marginBottom="24dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/frontImagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/uploadFrontIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/upload"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload a clear Front Valid ID photo"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />
            </LinearLayout>

            <!-- Upload Slot for Back ID -->
            <LinearLayout
                android:id="@+id/uploadBackLayout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_marginBottom="24dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/backImagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/uploadBackIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/upload"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload a clear Back Valid ID photo"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>
            <!-- Upload Slot for Back ID -->
            <LinearLayout
                android:id="@+id/uploadFaceLayout"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/rounded_border"
                android:layout_marginBottom="24dp"
                android:padding="8dp">

                <ImageView
                    android:id="@+id/faceImagePreview"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ImageView
                    android:id="@+id/uploadFaceIcon"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:src="@drawable/upload"
                    app:tint="#FFFFFF" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Upload a clear Selfie with Valid ID photo"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:layout_marginTop="8dp" />

            </LinearLayout>

            <!-- Continue Button -->
            <Button
                android:id="@+id/btnContinue"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Continue"
                android:textSize="16sp"
                android:backgroundTint="#FFFFFF"
                android:textColor="#062A32"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="100dp"
                android:enabled="false" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
