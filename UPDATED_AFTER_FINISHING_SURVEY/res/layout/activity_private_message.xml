<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#123C39">


    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:padding="15dp">

        <TextView
            android:id="@+id/urgent_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Urgent"
            android:textColor="@color/black"
            android:background="@drawable/rounded_red_background"
            android:padding="8dp"
            android:layout_marginEnd="8dp"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Therapy with Juliana Ortiz"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="19dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/call_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call"/>
    </LinearLayout>

    <!-- Chat Message -->
    <TextView
        android:id="@+id/therapist_message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Hi Caleb, you've been connected with Juliana Ortiz, your licensed therapist..."
        android:textColor="#FFFFFF"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="20dp"/>

    <!-- Message Input -->
    <EditText
        android:id="@+id/message_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Write a message..."
        android:background="#FFFFFF"
        android:padding="16dp"
        android:textColor="#000000"
        android:layout_marginTop="450dp"
        android:layout_marginBottom="10dp"/>

    <!-- Bottom Navigation -->
    <include layout="@layout/bottom_navigation"/>
</LinearLayout>
