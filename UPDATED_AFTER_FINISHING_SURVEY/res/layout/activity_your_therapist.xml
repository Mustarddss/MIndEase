<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#223C3F">

    <!-- "YOUR THERAPIST" Header -->
    <TextView
        android:id="@+id/text_therapist_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:padding="16dp"
        android:text="YOUR THERAPIST"
        android:textColor="#000000"
        android:textSize="24sp"
        android:textStyle="bold"
        android:gravity="center" />

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/text_therapist_header"
        android:layout_above="@+id/bottom_navigation"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Therapist Profile -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#004F4F"
                android:padding="16dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <ImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/zayn"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Zayn Malik,"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Advanced diploma in psychotherapeutic counseling, Psychotherapist"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Therapied: 10"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="⭐⭐⭐⭐⭐"
                    android:textSize="18sp"
                    android:textColor="#FFD700"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>

            <!-- About Me Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="About Me"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="I use the Integrative approach with the prominence of Person Centred therapy and its optimistic view of the human being. I will use my expertise and experiences to provide you a supportive climate where you will gain a new insight and reach the potential to get past the blocks of self-sabotage and discover what is right for you at this moment in your life. If you are ready to put your best foot forward and make some changes, then I would love to work in partnership with you!"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Specialties Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Specialties"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="• Stress and anxiety\n• Traumas and abuse\n• Intimacy related issues"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Also Experienced In Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Also experienced in:"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Relationship issues, Family conflicts, Coping with grief and loss, Sleeping disorders, Parenting issues, Anger management, Motivation, self-esteem, and confidence, Depression, Coping with life changes"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <!-- Years of Experience -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Years of experience: 4"
                android:textSize="14sp"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="16dp" />

            <!-- Reviews Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reviews"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginBottom="8dp" />

            <LinearLayout
                android:id="@+id/reviews_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp"
                android:background="#334F4F"
                android:layout_marginBottom="16dp" />

            <!-- Write a Review Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Write a Review"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp" />

            <RatingBar
                android:id="@+id/rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:numStars="5"
                android:stepSize="1.0"
                android:rating="0"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/edit_text_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Write your review here..."
                android:padding="12dp"
                android:background="@drawable/rounded_input"
                android:textColor="#191717"
                android:textColorHint="#CCCCCC"
                android:layout_marginBottom="12dp" />

            <Button
                android:id="@+id/button_submit_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Submit Review"
                android:background="#FF6200EE"
                android:textColor="#FFFFFF"
                android:padding="12dp" />
        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation with Text Labels -->
    <LinearLayout
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="#FFFFFF"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Messages -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconMessages"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_chat" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Messages"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Schedule -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconSchedule"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_calendar" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Schedule"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- Community -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconCommunity"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_group" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>

        <!-- More -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/iconMore"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_menu" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="More"
                android:textSize="12sp"
                android:textColor="#000000"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>